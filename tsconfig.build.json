{
    "version": "4.3.5",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        // "tsBuildInfoFile": "tsconfig.build.json",
        // "allowJs": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}